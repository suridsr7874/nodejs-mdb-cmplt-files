<script src="../public/bootstrap/js/bootstrap.js"></script>
<script src="../public/bootstrap/js/mdb.js"></script>
<script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<script>
    $('.carousel').carousel({
        interval: 1000
    });

    CKEDITOR.replace( 'description' );

</script>
</body>
</html>